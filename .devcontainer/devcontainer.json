{
  "name": "Curr√≠culo App - Laravel + Vue.js",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/curriculo_app",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "Vue.volar",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "xdebug.php-debug"
      ],
      "settings": {
        "php.suggest.basic": false,
        "php.validate.enable": false,
        "intelephense.files.maxSize": 3000000,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        }
      }
    }
  },

  "forwardPorts": [8000, 3000, 5173],
  "portsAttributes": {
    "8000": {
      "label": "Laravel App",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "cd src && composer install && npm install",
  "postStartCommand": "cd src && php artisan key:generate --ansi",

  "remoteUser": "vscode"
}